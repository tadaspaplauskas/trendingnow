extends ./master.pug

block content
    .row
        .col-md-2
            include ./subscribe_form.pug

        .col-md-2.fade-in-faster
            h2 Trending hashtags

            if trendingHashtagsList && trendingHashtagsList.length > 0
                ul.list-unstyled.fade-in-slower
                    each hashtag in trendingHashtagsList
                        li.fade-in-slower
                            a(href='keywords/' + escape(hashtag.hashtag))= hashtag.hashtag
                            | <!-- #{hashtag.zscore} -->
            else
                p Nothing  show, sorry.

        .col-md-2.fade-in-faster
            h2 Popular hashtags

            if popularHashtagsList && popularHashtagsList.length > 0
                ul.list-unstyled.fade-in-slower
                    each hashtag in popularHashtagsList
                        li.fade-in-slower
                            a(href='keywords/' + escape(hashtag.hashtag))= hashtag.hashtag
                            | <!-- #{hashtag.mentions} -->
            else
                p Nothing to show, sorry.

        .col-md-3.fade-in-faster
            h2 Trending links

            if trendingLinksList && trendingLinksList.length > 0
                ul.list-unstyled.fade-in-slower
                    each link in trendingLinksList
                        li.fade-in-slower
                            a(href=link.link target="_blank")= link.title
                            | <!-- #{link.zscore} -->
                            | <!-- #{link.mentions} -->
            else
                p Nothing to show, sorry.

        .col-md-3.fade-in-faster
            h2 Popular links

            if popularLinksList && popularLinksList.length > 0
                ul.list-unstyled.fade-in-slower
                    each link in popularLinksList
                        li.fade-in-slower
                            a(href=link.link target="_blank")= link.title
                            | <!-- #{link.zscore} -->
                            | <!-- #{link.mentions} -->
            else
                p Nothing to show, sorry.
