extends ./master.pug

block content
    h3= subscriber.email

    .row
        .col-md-6
            h3 Content
            form.input-group(method="POST" action="/subscribers/preferences")
            .row
                .col-xs-6.text-right
                    input(type="checkbox" name="hashtags" id="hashtags" value="1" checked=Boolean(subscriber.hashtags))
                label.col-xs-6.text-left(for="hashtags") hashtags
            .row
                .col-xs-6.text-right
                    input(type="checkbox" name="links" id="links" value="1" checked=Boolean(subscriber.links))
                label.col-xs-6.text-left(for="links") links
            button.btn.btn-default(type=submit style="margin:1em") Save

        .col-md-6
            h3 Blacklisted
            .row

            if subscriber.blacklist !== undefined && subscriber.blacklist.length > 0
                each item in subscriber.blacklist
                    .col-xs-6.text-right= item
                    .col-xs-6.text-left
                        a(href=remove_link + encodeURIComponent(item)) (remove)
            else
                | Nothing here